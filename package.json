{
    "name": "lumio-platform",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev:frontend": "cd apps/frontend && npm start",
        "dev:backend": "cd apps/backend && npm run start:dev",
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "build:frontend": "cd apps/frontend && npm run build",
        "build:backend": "cd apps/backend && npm run build",
        "test:frontend": "cd apps/frontend && npm test",
        "test:backend": "cd apps/backend && npm test",
        "install:all": "npm install && cd apps/frontend && npm install"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}